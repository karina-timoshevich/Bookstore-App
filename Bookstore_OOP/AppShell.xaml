<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Bookstore_OOP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Bookstore_OOP"
    xmlns:view="clr-namespace:Bookstore_OOP.View"
    
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate view:SignInPage}"
        Route="SignIn" />

    <ShellContent
    Title="Home"
    ContentTemplate="{DataTemplate view:SignUpPage}"
    Route="SignUp" />

</Shell>
